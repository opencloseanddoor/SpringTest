<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.asm.spring.test.thymeleaf2.repository.WeatherhistoryRepository">
	<select id="selectWeatherhistory" resultType="com.asm.spring.test.thymeleaf2.weatherhistory.Weatherhistory">
		SELECT * FROM `weatherhistory`
	</select>
	
	<insert id="insertWeatherHistory" parameterType="com.asm.spring.test.thymeleaf2.weatherhistory.Weatherhistory">
		INSERT INTO
		`weatherhistory`
		(
			`name`,
			`weather`,
			`temperatures`,
			`precipitation`,
			`microDust`,
			`windSpeed`
		)
		(
			#{name},
			#{weather},
			#{temperatures},
			#{precipitation},
			#{microDust},
			#{windSpeed}
		)
	</insert>
</mapper>